@model List<OrderDiscount>
@{
    Layout = "_BackOfficeLayout";
    ViewData["Title"] = "Booking";
}
<div class="add-btn-section">
    <a href="/add-room-details" class="btn btn-primary float-right">Add Discount</a>
</div>
<div class="col-md-12 mt-3">
    <table class="table table-stripped table-bordered table-hover table-center mb-0">
        <thead>
            <tr>
                <th>Discount ID</th>
                <th>Room</th>
                <th>Discount Percentage</th>
                <th>Start Date</th>
                <th>Expiration Date</th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null && Model.Count > 0)
            {
                @foreach (var discount in Model)
                {
                    <tr>
                        <td>@discount.DiscountID</td>
                        <td>@discount.RoomName</td>
                        <td>@discount.DiscountPercentage</td>
                        <td>@discount.StartDate.ToShortDateString()</td>
                        <td>@discount.ExpirationDate.ToShortDateString()</td>
                    </tr>
                }
            }
        </tbody>
    </table>


</div>

<script src="~/assets/js/commonfunction.js"></script>
<partial name="_DataTableScriptPartial" />
<script>

    $(document).ready(function () {
        ApplyCommonGridStyle();
    });
</script>
