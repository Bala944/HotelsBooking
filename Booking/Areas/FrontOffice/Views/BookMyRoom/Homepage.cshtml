@model BookMyRoomResultDTO

<!-- BEGIN: Slider Section ======================================== -->
<div class="owl-carousel owl-theme">
    <div class="item">
        <img src="assets/images/slider/slider2.jpg" alt="Aara Cottages ">
        <div class="cover">
            <div class="container">
                <div class="header-content">
                    <div class="line"></div>
                    <h1>Cottages in Yelagiri</h1>
                    <h4>Charming and Idyllic; a cottage break is the perfect getaway.</h4>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- END: Slider Section ========================================= -->

<form id="frmSelectRoom" asp-area="FrontOffice" asp-controller="BookMyRoom" asp-action="SingleRoomDetails">
    <input type="hidden" id="roomId" name="roomId" value="" />
</form>
<a class="edit-icon" href="javascript:void(0);" onclick="openEditMode(1)">Edit</a>
<!-- BEGIN: Search Section ========================================= -->
<section id="search-sec">
    <div class="container-fluid search-panel">
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <h2>Search</h2>
                </div>
            </div>
            <form id="frmRoomFilter" asp-area="FrontOffice" asp-controller="BookMyRoom" asp-action="Homepage">
                <div class="row">
                    <div class="col">
                        <div class="form-group">
                            <label>Check-in Date</label>
                            <input asp-for="roomFilterDTO.CheckInDate" type="text" class="form-control" placeholder="dd/mm/yyyy" />
                        </div>
                    </div>
                    <div class="col">
                        <div class="form-group">
                            <label>Check-out Date</label>
                            <input asp-for="roomFilterDTO.CheckOutDate" type="text" class="form-control" placeholder="dd/mm/yyyy" />
                        </div>
                    </div>
                    <div class="col">
                        <div class="form-group">
                            <label>Adults</label>
                            <select class="form-select" asp-for="roomFilterDTO.Adults">
                                <option>(Select)</option>
                                <option>1</option>
                                <option>2</option>
                                <option>3</option>
                                <option>4</option>
                                <option>5</option>
                            </select>
                        </div>
                    </div>
                    <div class="col">
                        <div class="form-group">
                            <label>Children</label>
                            <select class="form-select" asp-for="roomFilterDTO.Children">
                                <option>(Select)</option>
                                <option>1</option>
                                <option>2</option>
                                <option>3</option>
                                <option>4</option>
                                <option>5</option>
                            </select>
                        </div>
                    </div>
                    <div class="col">
                        <div class="form-group">
                            <label>Rooms</label>
                            <select class="form-select" asp-for="roomFilterDTO.Rooms">
                                <option>(Select)</option>
                                <option>1</option>
                                <option>2</option>
                                <option>3</option>
                                <option>4</option>
                                <option>5</option>
                            </select>
                        </div>
                    </div>
                    <div class="col">
                        <div class="form-group">
                            <label class="d-block">&nbsp;</label>
                            <a class="btn btn-primary" onclick="$('#frmRoomFilter').submit();">Search</a>

                        </div>
                    </div>
                </div>
            </form>

        </div>
    </div>
</section>
<!-- END: Search Section ========================================= -->
<!-- BEGIN: Featured Section ==================================== -->
<section id="featued-sec" class="section">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <h2 class="section-title text-center">Featured</h2>
            </div>

            @if (Model!=null && Model.listRoomsDetailsDTO != null && Model.listRoomsDetailsDTO.Count > 0)
            {
                foreach (var item in Model.listRoomsDetailsDTO)
                {
                    <div class="col-md-6">
                        <div class="rooms-panel">
                            <div class="rooms-img">
                                <img src="assets/images/rooms/room1.jpg" alt="Room" class="img-fluid" />
                            </div>
                            <div class="room-discription">
                                <div class="room-title">
                                    <h4><a href="view-room-details.html">Treebo Trend Windsor Heights</a></h4>
                                </div>
                                <div class="">
                                    <p><b>@item.RoomType</b></p>
                                     @item.BedType
                                </div>
                                <ul>
                                    <li><i class="fas fa-check"></i>@item.CancelationCharge</li>
                                    <li><i class="fas fa-check"></i>No prepayment needed – pay at the property</li>
                                </ul>
                                <div class="pricing-details">
                                    <p>1 day 2 adults</p>
                                    @if(item.Discount>0)
                                    {
                                        <h5><strike>₹ 2,000</strike> ₹ 1,500</h5>
                                    }
                                    else
                                    {
                                        <h5>@item.Rate</h5>
                                    }
                                    
                                    <p>+ ₹ 500 taxes and charges</p>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            }
            <div class="col-md-12 text-center">
                <a href="view-more-rooms.html" class="btn btn-primary">View More</a>
            </div>
        </div>
    </div>
</section>
<!-- END: Featured Section ==================================== -->
