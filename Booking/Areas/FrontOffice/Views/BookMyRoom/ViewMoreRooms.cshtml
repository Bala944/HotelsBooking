            font-size: 20px;
            color: #333;
        }




    table {
        width: 100%;
    }

    th, td {
        padding: 12px;
        text-align: left;
    }

    th {
        background-color: #002349;
        color: #fff;
    }

    tbody tr:hover {
        background-color: #ecf0f1;
    }

    tfoot {
        font-weight: bold;
    }

        tfoot td {
            border-top: 2px solid #333;
            padding-top: 12px;
        }

            tfoot td:first-child {
                text-align: right;
            }

