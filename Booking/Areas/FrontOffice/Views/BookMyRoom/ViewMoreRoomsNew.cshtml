@using System.Globalization;
@model RoomandEventDetailsDTO
@{
    ViewData["Title"] = "View More Rooms";
}
<!-- Banner -->
<section class="section-banner ">
    <div class="row banner-image">
        <div class="banner-overlay"></div>
        <div class="banner-section">
            <div class="lh-banner-contain">
                <h2>Room</h2>
                <div class="lh-breadcrumb">
                    <h5>
                        <span class="lh-inner-breadcrumb">
                            <a href="index.html">Home</a>
                        </span>
                        <span> / </span>
                        <span>
                            <a href="javascript:void(0)">Room</a>
                        </span>
                    </h5>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Rooms -->
<section class="section-rooms bg-gray padding-b-100 padding-t-50">
    <div class="container">
        <section class="section-search-control sub-page-search">
            <div class="container">
                <form id="frmRoomFilter" asp-area="FrontOffice" asp-controller="BookMyRoom" asp-action="ViewMoreRoomsNew">
                    <div class="search-control-boxing">
                        <div class="lh-col">
                            <div class="search-box">
                                <h4 class="heading">
                                    Check in
                                </h4>
                                <div class="calendar" id="date_1">
                                    <i class="ri-calendar-2-line"></i>
                                    <input asp-for="roomFilterDTO.CheckInDate" id="CheckInDate" type="text" class="form-control date-picker" placeholder="dd/mm/yyyy" />
                                </div>
                            </div>
                        </div>
                        <div class="lh-col">
                            <div class="search-box">
                                <h4 class="heading">
                                    Check Out
                                </h4>
                                <div class="calendar" id="date_2">
                                    <i class="ri-calendar-2-line"></i>
                                    <input asp-for="roomFilterDTO.CheckOutDate" id="CheckOutDate" type="text" class="form-control date-picker" placeholder="dd/mm/yyyy" />
                                </div>
                            </div>
                        </div>
                        <div class="lh-col">
                            <div class="search-box">
                                <h4 class="heading">
                                    Adults
                                </h4>
                                <div class="custom-select">
                                    <select asp-for="roomFilterDTO.Adults">
                                        <option>1</option>
                                        <option>2</option>
                                        <option>3</option>
                                        <option>4</option>
                                        <option>5</option>
                                    </select>
                                </div>
                            </div>
                        </div>
                        <div class="lh-col">
                            <div class="search-box">
                                <h4 class="heading">
                                    Children
                                </h4>
                                <div class="custom-select">
                                    <select asp-for="roomFilterDTO.Children">
                                        <option>(Select)</option>
                                        <option>1</option>
                                        <option>2</option>
                                        <option>3</option>
                                        <option>4</option>
                                        <option>5</option>
                                    </select>
                                </div>
                            </div>
                        </div>
                        <div class="lh-col">
                            <div class="search-box">
                                <h4 class="heading">
                                    Room Type
                                </h4>
                                <div class="custom-select">
                                    <select asp-for="roomFilterDTO.RoomType">
                                        <option value="-1">All</option>
                                        <option value="0">AC</option>
                                        <option value="1">NON-AC</option>

                                    </select>
                                </div>
                            </div>
                        </div>
                        <div class="lh-col-check">
                            <div class="search-control-button">
                                <a class="lh-buttons result-placeholder" onclick="$('#frmRoomFilter').submit();">
                                    Check Now
                                </a>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </section>
        <div class="banner" data-aos="fade-up" data-aos-duration="2000">
            <h2>Choose Your Luxurious <span>Room</span></h2>
        </div>
        <div class="row mtb-m-12">
            @if (Model != null && Model.RoomDetails != null && Model.RoomDetails.Count > 0)
            {
                @foreach (var item in Model.RoomDetails)
                {

                    string image = string.Empty;
                    double DiscountAmount = 0;
                    @if (item != null && item.Images != null && item.Images != "")
                    {
                        string[] ImageData = item.Images.Split('$');
                        if (ImageData.Length > 0)
                        {

                            image = ImageData[0];

                        }
                    }

                    <div class="col-xl-4 col-md-6" data-aos="fade-up" data-aos-duration="1500">
                        <div class="rooms-card">

                            src="@(string.IsNullOrEmpty(image) ? "/assets/images/rooms/room1.jpg" : "/Attachments/RoomImages/" + image)"
                           
                            <div class="details">
                                <h3>@item.RoomNumber</h3>
                                <span>₹@item?.Rate / Night</span>
                                <ul>
                                    <li><i class="ri-group-line"></i>@(item?.MaxOccupancy > 0 ? item.MaxOccupancy + " adults" : "")   @(item?.MaxChild > 0 ? item.MaxChild + " child" : "")</li>
                                    <li><i class="ri-hotel-bed-line"></i>@item.BedType</li>
                                    <li><i class="ri-restaurant-2-line"></i>@item.RoomType</li>
                                    <li><i class="mdi mdi-pool"></i>@item.CancelationCharge</li>
                                    <li><i class="ri-wifi-line"></i>@item.Payment</li>
                                </ul>
                                <a href="#" class="lh-buttons-2">View More <i class="ri-arrow-right-line"></i></a>
                            </div>
                        </div>
                    </div>
                }
            }
            
        </div>
    </div>
</section>