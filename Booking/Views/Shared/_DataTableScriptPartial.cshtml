<script>

    function ApplyCommonGridStyle() {
        var table = $('.table');
        var oTable = table.DataTable({
            responsive: true,
            ordering: true,
            "bLengthChange": true, //thought this line could hide the LengthMenu
            "bInfo": true,
            "columnDefs": [{
                "orderable": false,
                "targets": [0, 1],
            }],
            "order": [
                [2, 'asc']
            ],
            "language": {
                "emptyTable": "No data found"
            }
        });
        $('#txtSeachGrid').on('keyup click', function () {
            oTable.search($(this).val()).draw();
        });
    }
</script>